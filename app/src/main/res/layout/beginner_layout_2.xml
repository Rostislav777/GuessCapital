<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:background="@drawable/england">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the capital of Great Britain?"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:id="@+id/textBeginnerQuestion_2"
            android:background="#83000000"
            android:layout_marginTop="50sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:background="#338a30">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paris"
            android:id="@+id/buttonBeginner_1_2"
            android:background="#2183c9"
            android:textSize="26sp"
            android:padding="14dp"
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"
            android:onClick="ParisOn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="London"
            android:id="@+id/buttonBeginner_2_2"
            android:background="#2183c9"
            android:textSize="26sp"
            android:padding="14dp"
            android:layout_below="@+id/buttonBeginner_1_2"
            android:layout_marginTop="40sp"
            android:layout_gravity="center_horizontal"
            android:onClick="LondonOn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rome"
            android:id="@+id/buttonBeginner_3_2"
            android:background="#2183c9"
            android:textSize="26sp"
            android:padding="14dp"
            android:layout_below="@+id/buttonBeginner_2_2"
            android:layout_marginTop="40sp"
            android:layout_gravity="center_horizontal"
            android:onClick="RomeOn" />
    </LinearLayout>
</LinearLayout>